    {% style %}
        .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.sp_padding_top }}px;
    padding-bottom: {{ section.settings.sp_padding_bottom }}px;
  }
  @media screen and (min-width: 768px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  } 
    {% endstyle %}
    
    <div class="{% unless section.settings.no_margins %}section-spacing container{% endunless %} section-{{ section.id }}-padding" data-cc-animate>
  {{ section.settings.custom_liquid }}
</div>

{% schema %}
  {
    "name": "Custom Liquid/HTML",
    "class": "section--custom-html",
    "settings": [
      
      {
        "type": "checkbox",
        "id": "no_margins",
        "label": "No section spacing",
        "default": false
      },
      {
        "type": "liquid",
        "id": "custom_liquid",
        "label": "Custom Liquid/HTML"
      },
                      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "PCサイズ：上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "PCサイズ：下部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "sp_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "スマホサイズ：上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "sp_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "スマホサイズ：下部の余白",
      "default": 36
    }
    ],
    "presets": [
      {
        "name": "Custom Liquid/HTML"
      }
    ]
  }
{% endschema %}
