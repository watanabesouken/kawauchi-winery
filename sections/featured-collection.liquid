{%- if section.settings.layout == 'rows' -%}
  {%- if section.settings.grid == 2 -%}
    {%- assign product_class = 'column half' -%}
    {%- elsif section.settings.grid == 3 -%}
    {%- assign product_class = 'column third' -%}
  {%- else -%}
    {%- assign product_class = 'column quarter' -%}
  {%- endif -%}
{%- endif -%}

{%- assign max_products = section.settings.grid | times: section.settings.rows -%}

{% assign animation_type = "cc-fade-in-up" %}
{%- if section.settings.layout == "columns" -%}
  {% assign animation_type = "cc-fade-in" %}
{%- endif -%}

  {% style %}
        .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.sp_padding_top }}px;
    padding-bottom: {{ section.settings.sp_padding_bottom }}px;
  }
  @media screen and (min-width: 768px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }    
        .section-{{ section.id }}-padding .line-1 {
        {%- assign title_size_medium = section.settings.title_size | times: 0.7 -%}
        font-size: {{ title_size_medium }}px;
      }
    
        @media (min-width: 992px) {
      .section-{{ section.id }}-padding .line-1 {
        font-size: {{ section.settings.title_size }}px;
      }
    }
    {% endstyle %}

{% if section.settings.layout == 'carousel' %}<div class="product-slider">{% endif %}

<div class="section-{{ section.id }}-padding wide-container half-gutter {% if section.settings.alternate_bg_color %}use-alt-bg {% endif %}" data-section-type="featured-collection" data-components="product-block" data-cc-animate>
  {% if section.settings.title != blank or section.settings.show_view_all %}
    <div class="section-heading" data-cc-animate>
      {% if section.settings.title != blank %}
        <h2 class="h2 line-1{% if section.settings.title_size >= 86 %}line-1--large{% endif %}">
            {{ section.settings.title | newline_to_br }}
          </a>
        </h2>
      {% else %}
          <div></div>
      {% endif %}

      {% if section.settings.show_view_all %}
        <a data-cc-animate-click class="view-all-link" href="{{ collections[section.settings.collection].url }}">
          {{ 'collections.general.view_all' | t }}
        </a>
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.layout == 'carousel' %}
    <div class="swiper-container product-list product-list--{{ section.settings.layout }}"
         data-products-in-view="{{ section.settings.grid }}">

      <div class="swiper-wrapper" data-normheights=".image" data-normheights-inner="img">
        {% if section.settings.collection != blank %}
          {% assign collection = collections[section.settings.collection] %}
          {% for product in collection.products limit: 12 %}
            <div class="swiper-slide">
              {% assign animate_delay = forloop.index | times: 0.4 %}
              {% render 'product-block', product: product, product_class: product_class, i: forloop.index, animate: animate_delay, show_vendor: section.settings.show_vendor, hide_swatches: section.settings.hide_swatches %}
            </div>
          {% endfor %}

        {% else %}
          {% for i in (1..max_products) %}
            <div class="swiper-slide">
              {% assign animate_delay = forloop.index | times: 0.4 %}
              {% render 'onboarding-product-block', i: forloop.index, product_class: product_class, animate: animate_delay %}
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <div class="swiper-scrollbar"></div>
      <a href="#" class="swiper-button-prev" aria-label="{{ 'general.accessibility_labels.previous' | t | escape }}">{% render 'svg-chevron-left' %}</a>
      <a href="#" class="swiper-button-next" aria-label="{{ 'general.accessibility_labels.next' | t | escape }}">{% render 'svg-chevron-right' %}</a>
    </div>
  {% else %}
    <div class="product-list

      product-list--{{ section.settings.layout }}
      {% if section.settings.grid_mobile == '2' %}mob-two-col{% endif %}
      mob-show-{{ section.settings.rows | times: section.settings.grid_mobile }}
      {% if section.settings.layout == 'columns' %}jiggly-split dynamic-col-{{ section.settings.grid }}{% else %}grid--uniform{% endif %}">

      {% if section.settings.collection != blank %}
        {% assign collection = collections[section.settings.collection] %}
        {% for product in collection.products limit: max_products %}
          {% render 'product-block', product: product, product_class: product_class, animation_type: animation_type, i: forloop.index, show_vendor: section.settings.show_vendor, animate: forloop.index, hide_swatches: section.settings.hide_swatches %}
        {% endfor %}

      {% else %}
        {% for i in (1..max_products) %}
          {% assign animate_delay = forloop.index | times: 0.4 %}
          {% render 'onboarding-product-block', i: forloop.index, product_class: product_class, animate: animate_delay, animation_type: animation_type %}
        {% endfor %}
      {% endif %}
    </div>
  {% endif %}
</div>

{% if section.settings.layout == 'carousel' %}</div>{% endif %}


{% schema %}
  {
    "name": "特集商品コレクション",
    "class": "section-featured-collection",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "PCサイズ：上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "PCサイズ：下部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "sp_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "スマホサイズ：上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "sp_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "スマホサイズ：下部の余白",
      "default": 36
    },
      {
        "type": "textarea",
        "id": "title",
        "label": "見出し",
        "default": "特集商品コレクション"
      },
            {
        "type": "range",
        "id": "title_size",
        "min": 20,
        "max": 150,
        "step": 2,
        "unit": "px",
        "label": "見出しのテキストサイズ",
        "default": 60
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "コレクション"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "レイアウト",
        "options": [
          {
            "value": "columns",
            "label": "コラージュ"
          },
          {
            "value": "rows",
            "label": "グリッド"
          },
          {
            "value": "carousel",
            "label": "カルーセル"
          }
        ],
        "default": "rows",
        "info": "コラージュは、製品/画像形状で「画像形状」が自然に設定されている場合にのみ機能します"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "販売元を表示する",
        "default": false
      },
      {
        "type": "range",
        "id": "grid",
        "label": "デスクトップに表示する商品数",
        "min": 2,
        "max": 4,
        "default": 3
      },
      {
        "type": "range",
        "id": "rows",
        "label": "カラム",
        "min": 1,
        "max": 4,
        "default": 2,
        "info": "カルーセルレイアウトを適応しません"
      },
      {
        "type": "select",
        "id": "grid_mobile",
        "label": "一列に表示する商品数（スマホ）",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          }
        ],
        "default": "2"
      },
      {
        "type": "checkbox",
        "id": "show_view_all",
        "label": "「全て見る」リンクを表示する",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "特集商品コレクション",
        "settings": {}
      }
    ],
    "templates": ["article", "index", "page", "product", "collection", "blog", "list-collections", "search", "404", "cart"]
  }
{% endschema %}
